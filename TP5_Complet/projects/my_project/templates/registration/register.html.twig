{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <h1>Inscription</h1>
    {{ form_start(registrationForm) }}
    <div class="container">
        <div class="row">

            
            <div class="col-md-4 col-sm-6">{{ form_label(registrationForm.email, "Nom d utilisateur") }}{{ form_widget(registrationForm.email)}}</div>
            <div class="col-md-4 col-sm-6">{{ form_label(registrationForm.plainPassword, "Mot de passe") }}{{ form_widget(registrationForm.plainPassword)}}</div>
            <div class="col-md-4 col-sm-6">{{ form_label(registrationForm.agreeTerms, "Accepter les conditions") }} {{form_widget(registrationForm.agreeTerms)}}</div>
        
        </div>

        <button type="submit" class="btn btn-success">Inscription</button>
    </div>
    {{ form_end(registrationForm) }}
{% endblock %}
