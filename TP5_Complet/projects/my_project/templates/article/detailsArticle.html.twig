{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="thumbnail">
                    <h2>{{articles.nom}}</h2>
                    <img src="{{articles.photo}}" width="350" height="250"/>
                        <br>
                    <h4>Prix : {{articles.prix}}</h4> <br><br>
                    <h4>Details : {{articles.details}}</h4>
                    <a href="{{path('RemoveArticle', {'id': articles.id})}}" class= "btn btn-danger">Supprimer</a>
                    <br>
                </div>
            </div>
        </div>
    </div>
{% endblock %}